<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#A3ADE6"
    android:orientation="vertical"
    tools:context=".StudentsMarknActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="@color/white"
        android:text="Students Marks"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/stdId"
        android:layout_width="match_parent"
        android:background="#6276E1"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:text="Enter Student ID"
        android:layout_marginTop="35dp"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/stdName"
        android:layout_width="match_parent"
        android:background="#6276E1"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:text="Enter Student Name"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/androidMark"
        android:layout_width="match_parent"
        android:background="#6276E1"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:text="Enter Android marks"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/apiMark"
        android:layout_width="match_parent"
        android:background="#6276E1"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:text="Enter API marks"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/iotMark"
        android:layout_width="match_parent"
        android:background="#6276E1"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:text="Enter IOT marks"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to List"
        android:textSize="23sp"
        android:background="#3949AB"
        android:textColor="@color/white"
        android:padding="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal" />

</LinearLayout>